{{#bs-navbar fluid=false as |navbar|}}
  <div class="navbar-header">
    {{#navbar.toggle}}
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    {{/navbar.toggle}}
    {{#link-to 'index' class="navbar-brand"}}
      Ember-Mongo-Blog
    {{/link-to}}
  </div>
  {{#navbar.content}}
    {{#navbar.nav as |nav|}}
      {{#nav.item}}
        {{#link-to "articles"}}Articles{{/link-to}}
      {{/nav.item}}
      {{#nav.item}}
        {{#link-to "about"}}About{{/link-to}}
      {{/nav.item}}
    {{/navbar.nav}}
    {{#navbar.nav classNames="navbar-right" as |nav|}}
      {{#if session.isAuthenticated}}
        {{#nav.item}}
          <img class="user-img" src={{user.current.picture}}>
        {{/nav.item}}
        {{#nav.item}}
          {{#link-to "me"}}{{user.current.fullname}}{{/link-to}}
        {{/nav.item}}
        {{#nav.item}}
          <a href="#" {{action "invalidateSession"}}>Logout</a>
        {{/nav.item}}
      {{else}}
        {{#nav.item}}
          <a href="#" {{action "authenticate"}}>Login</a>
        {{/nav.item}}
      {{/if}}
    {{/navbar.nav}}
  {{/navbar.content}}
{{/bs-navbar}}